<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="bottom|end"
            android:padding="20dp">

            <TextView
                android:id="@+id/values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn_sin"
                        android:text="sin"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A5A5A5"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_cos"
                        android:text="cos"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A5A5A5"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_tan"
                        android:text="tan"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A5A5A5"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_log"
                        android:text="log"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A5A5A5"
                        android:layout_margin="4dp"/>
                </LinearLayout>

                <!-- Row 0.5: ln, √, n! -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <Button android:id="@+id/btn_ln" android:text="ln" android:textColor="#000" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:backgroundTint="#A5A5A5" android:layout_margin="4dp"/>
                    <Button android:id="@+id/btn_sqrt" android:text="√" android:textColor="#000" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:backgroundTint="#A5A5A5" android:layout_margin="4dp"/>
                    <Button android:id="@+id/btn_fact" android:text="n!" android:textColor="#000" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:backgroundTint="#A5A5A5" android:layout_margin="4dp"/>
                </LinearLayout>

                <!-- Row 1: π, x², x³ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <Button android:id="@+id/btn_pi" android:text="π" android:textColor="#000" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:backgroundTint="#A5A5A5" android:layout_margin="4dp"/>
                    <Button android:id="@+id/btn_square" android:text="x²" android:textColor="#000" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:backgroundTint="#A5A5A5" android:layout_margin="4dp"/>
                    <Button android:id="@+id/btn_cube" android:text="x³" android:textColor="#000" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:backgroundTint="#A5A5A5" android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_ac"
                        android:text="AC"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A5A5A5"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_mod"
                        android:text="%"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A5A5A5"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_divide"
                        android:text="÷"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF9F0A"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_multiply"
                        android:text="×"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF9F0A"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_seven"
                        android:text="7"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_eight"
                        android:text="8"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_nine"
                        android:text="9"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_minus"
                        android:text="-"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF9F0A"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_four"
                        android:text="4"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_five"
                        android:text="5"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_six"
                        android:text="6"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_plus"
                        android:text="+"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF9F0A"
                        android:layout_margin="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <Button
                        android:id="@+id/btn_one"
                        android:text="1"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_two"
                        android:text="2"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_three"
                        android:text="3"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_equal"
                        android:text="="
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FF9F0A"
                        android:layout_margin="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/btn_zero"
                        android:text="0"
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                    <Button
                        android:id="@+id/btn_dot"
                        android:text="."
                        android:textColor="#FFF"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:backgroundTint="#333"
                        android:layout_margin="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
